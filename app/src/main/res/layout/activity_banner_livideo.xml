<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.github.kongpf8848.viewworld.views.CenterTitleToolbar
            android:id="@+id/toolbar"
            style="@style/TKToolbarNaviationStyle"
            app:title="仿梨视频APP轮播图" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kongpf8848.tkbanner.TKBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                app:banner_showIndicator="false">

                <com.github.kongpf8848.tkbanner.indicator.CuteIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:IndicatorColor="#999999"
                    app:IndicatorHeight="4dp"
                    app:IndicatorMargin="4dp"
                    app:IndicatorSelectedColor="@color/yellow"
                    app:IndicatorSelectedWidth="14dp"
                    app:IndicatorWidth="4dp" />

            </com.github.kongpf8848.tkbanner.TKBanner>
        </LinearLayout>

    </LinearLayout>
</layout>