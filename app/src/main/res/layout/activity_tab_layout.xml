<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.github.kongpf8848.viewworld.views.CenterTitleToolbar
            android:id="@+id/toolbar"
            style="@style/TKToolbarNaviationStyle"
            app:title="带切换动画效果的TabLayout" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="原生TabLayout"
            android:textColor="#333333"
            android:textSize="14sp" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_origin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:tabGravity="center"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#333333"
            app:tabTextColor="#999999" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="TabLayoutEx"
            android:textColor="#333333"
            android:textSize="14sp" />

        <com.github.kongpf8848.viewworld.views.TabLayoutEx
            android:id="@+id/tab_layout_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:tabBoldWhenSelected="true"
            app:tabModeEx="scrollable"
            app:tabSelectedTextColor="#333333"
            app:tabSelectedTextSize="16sp"
            app:tabTextColor="#999999"
            app:tabUnSelectedTextSize="14sp" />


        <com.github.kongpf8848.viewworld.views.TabLayoutEx
            android:id="@+id/tab_layout_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:tabBackgroundIsCorner="true"
            app:tabBoldWhenSelected="true"
            app:tabContentStart="25dp"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="32dp"
            app:tabModeEx="scrollable"
            app:tabPaddingEnd="10dp"
            app:tabPaddingStart="10dp"
            app:tabRippleColor="@color/transparent"
            app:tabSelectedTextColor="@color/black"
            app:tabSelectedTextSize="16sp"
            app:tabTextColor="#999999"
            app:tabUnSelectedTextSize="14sp" />

        <com.github.kongpf8848.viewworld.views.TabLayoutEx
            android:id="@+id/tab_layout_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:tabBoldWhenSelected="true"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="2dp"
            app:tabModeEx="scrollable"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/black"
            app:tabSelectedTextSize="14sp"
            app:tabSlideAnimType="half_glue"
            app:tabTextColor="#999999"
            app:tabUnSelectedTextSize="14sp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />


    </LinearLayout>
</layout>