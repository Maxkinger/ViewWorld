<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.kongpf8848.viewworld.views.CenterTitleToolbar
            android:id="@+id/toolbar"
            style="@style/TKToolbarNaviationStyle"
            app:title="仿品玩APP轮播图" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kongpf8848.tkbanner.TKBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                app:banner_showIndicator="false">

                <com.github.kongpf8848.tkbanner.indicator.CuteIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    app:IndicatorColor="#cccccc"
                    app:IndicatorHeight="3dp"
                    app:IndicatorMargin="10dp"
                    app:IndicatorSelectedColor="@color/white"
                    app:IndicatorSelectedWidth="20dp"
                    app:IndicatorShowAnimation="false"
                    app:IndicatorWidth="6dp" />

            </com.github.kongpf8848.tkbanner.TKBanner>


        </LinearLayout>


    </LinearLayout>
</layout>